@model IEnumerable<Outreach.Entities.ViewModels.ServiceUserViewModels.ServiceUserIndexVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Service Users and their branches</h2>

<table id="service" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>BranchName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var serviceUser in Model)
        {
            <tr>
                <td>@Html.ActionLink(serviceUser.serviceUser.FirstName,"ShowProfile","ServiceUser",new { id= serviceUser.serviceUser.Id },null)</td>
                <td>@serviceUser.serviceUser.LastName</td>
                <td>@serviceUser.branch.Name</td>
            </tr>
        }
    </tbody>

</table>
@section Scripts{
    <script>

        $(document).ready(function () {
            
            $("#service").DataTable();
        });
    </script>
}
